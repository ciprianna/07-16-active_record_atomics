<div>
  <% if @error %>
    <% @new_photographer.errors.full_messages.each do |message| %>
      <h3 class="error"><%= message %></h3>
    <% end %>
  <% end %>
</div>

<div>
  <h2>Add a new photographer</h2>
  <form action="/save_new_photographer">
    <h3>Photographer Name</h3>
    <input type="text" name="[photographers][name]" placeholder="Name">
    <h3>Photographer Location</h3>
    <input type="text" name="[photographers][location]" placeholder="Location">
    <input type="submit">
  </form>
</div>

<div>
  <a href="/home">Home</a>
</div>
